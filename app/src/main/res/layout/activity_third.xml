<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThirdActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/level"
        android:layout_weight="2"
        android:text="PUZZLE 1 COMPLETED"
        android:textColor="#6004E4"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:src="@drawable/trophy"
        android:layout_marginTop="@dimen/_10sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/activity_third_txt1"
        android:background="@drawable/bg1"
        android:text="CONTINUE"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:textSize="@dimen/_20sdp"
        android:gravity="center"
        android:layout_marginRight="@dimen/_80sdp"
        android:layout_marginLeft="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_15sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_third_txt2"
        android:background="@drawable/bg1"
        android:layout_weight="2"
        android:text="MAIN MENU"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:textSize="@dimen/_20sdp"
        android:gravity="center"
        android:layout_marginRight="@dimen/_80sdp"
        android:layout_marginLeft="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_15sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/bg1"
        android:text="BUY PRO"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:textSize="@dimen/_20sdp"
        android:gravity="center"
        android:layout_marginRight="@dimen/_80sdp"
        android:layout_marginLeft="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_15sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="SHARE THIS PUZZLE"
        android:textColor="#6004E4"
        android:textStyle="bold|italic"
        android:textSize="@dimen/_15sdp"
        android:gravity="center"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:src="@drawable/baseline_share_24"
        android:background="@drawable/bg1"
        android:layout_marginRight="@dimen/_135sdp"
        android:layout_marginLeft="@dimen/_135sdp"
        android:layout_marginBottom="@dimen/_20sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

</LinearLayout>