<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="italic|bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Math Puzzles"
            android:textColor="#3A4EB6"
            android:textSize="@dimen/_27sdp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:background="@drawable/img1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_main_txt1"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="CONTINUE"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:textSize="@dimen/_21sdp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_130sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:id="@+id/activity_main_txt2"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="PUZZLES"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:textSize="@dimen/_21sdp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_30sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="BUY PRO"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:textSize="@dimen/_21sdp"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_130sdp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/baseline_share_24"
            android:layout_weight="1"
            android:background="@drawable/bg1"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_220sdp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:src="@drawable/baseline_mail_outline_24"
            android:background="@drawable/bg1"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_10sdp"/>

    </LinearLayout>

</LinearLayout>